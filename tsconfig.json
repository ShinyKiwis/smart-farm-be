{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "app": ["./src/app"],
      "database/*": ["./database/*"],
      "utils/*": ["./src/utils/*"],
      "interfaces/*": ["./src/interfaces/*"],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}